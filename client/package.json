    "tailwindcss": "^3.4.7",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.4.1",
    "vitest": "^2.0.5"
  },
  "type": "module",
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "boxicons": "^2.1.4",
    "dompurify": "^3.0.9",
    "jwt-decode": "^4.0.0",
    "marked": "^14.0.0",
    "oidc-client-ts": "^3.0.1",
    "qs": "^6.12.3",
